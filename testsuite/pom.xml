<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>io.smallrye</groupId>
    <artifactId>smallrye-jwt-parent</artifactId>
    <version>4.3.2-SNAPSHOT</version>
  </parent>

  <packaging>pom</packaging>
  <artifactId>smallrye-jwt-testsuite-parent</artifactId>
  <name>SmallRye: MicroProfile JWT - Testsuite Parent</name>

  <properties>
    <version.smallrye.testing>2.3.0</version.smallrye.testing>
    <version.smallrye.config>3.1.1</version.smallrye.config>
    <version.resteasy>6.2.2.Final</version.resteasy>
    <version.resteasy.client>2.1.4.Final</version.resteasy.client>

    <version.galleon>5.2.1.Final</version.galleon>
    <version.wildfly>25.0.1.Final</version.wildfly>
    <version.wildfly.plugin>4.2.0.Final</version.wildfly.plugin>
  </properties>

  <dependencyManagement>
    <dependencies>
      <!-- Test Dependencies -->
      <dependency>
        <groupId>org.eclipse.microprofile.jwt</groupId>
        <artifactId>microprofile-jwt-auth-tck</artifactId>
        <version>${version.eclipse.microprofile.jwt}</version>
      </dependency>
      <dependency>
        <groupId>org.eclipse.microprofile.jwt</groupId>
        <artifactId>microprofile-jwt-auth-tck</artifactId>
        <type>test-jar</type>
        <version>${version.eclipse.microprofile.jwt}</version>
      </dependency>
      <dependency>
        <groupId>io.smallrye.testing</groupId>
        <artifactId>smallrye-testing-bom-tck</artifactId>
        <version>${version.smallrye.testing}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
      <dependency>
        <groupId>io.smallrye.config</groupId>
        <artifactId>smallrye-config</artifactId>
        <version>${version.smallrye.config}</version>
        <scope>test</scope>
      </dependency>
      <dependency>
        <groupId>org.jboss.resteasy</groupId>
        <artifactId>resteasy-bom</artifactId>
        <version>${version.resteasy}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
      <dependency>
        <groupId>org.jboss.resteasy.microprofile</groupId>
        <artifactId>microprofile-rest-client</artifactId>
        <version>${version.resteasy.client}</version>
        <scope>test</scope>
      </dependency>
    </dependencies>
  </dependencyManagement>


  <modules>
    <module>basic</module>
    <module>tck</module>
  </modules>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-install-plugin</artifactId>
        <configuration>
          <skip>true</skip>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.sonatype.plugins</groupId>
        <artifactId>nexus-staging-maven-plugin</artifactId>
        <configuration>
          <skipNexusStagingDeployMojo>true</skipNexusStagingDeployMojo>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
